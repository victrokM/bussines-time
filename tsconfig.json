{
  "compilerOptions": {
    /* Lenguaje y compatibilidad */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Entrada y salida */
    "rootDir": "src",
    "outDir": "dist",

    /* Librerías estándar */
    "lib": ["es2022"],

    /* Archivos de definición */
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],

    /* Reglas estrictas */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Otras opciones */
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "cdk.out", "dist"]
}
